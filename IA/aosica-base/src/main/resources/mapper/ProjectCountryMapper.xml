<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aoscia.base.mapper.ProjectCountryMapper">

    <insert id="insert" parameterType="com.aoscia.base.dto.CountryDto">
            insert into ai_country (id) values (#{id});
    </insert>

    <select id="get" parameterType="java.lang.String" resultType="com.aoscia.base.dto.CountryDto">
        select id from ai_country where name=#{name}
    </select>

    <update id="update" parameterType="com.aoscia.base.dto.CountryDto">
        update ai_country
        <set>
            <if test="name!= null and name != '' ">
                name = #{name},
            </if>
            <if test="language!= null and language != '' ">
                language = #{language},
            </if>
            <if test="desc!= null and desc != '' ">
                desc = #{desc},
            </if>
        </set>
        <where>
            <if test="id !=null and id !=''">
                id=#{id}
            </if>
        </where>
    </update>

    <select id="selectById">
        select id from ai_country where id=#{id}
    </select>

    <select id="getList" resultType="com.aoscia.base.dto.CountryDto" parameterType="map">
        <include refid="getList"></include>
    </select>

    <sql id="getList">
        select id from
        ai_country m
        where 1=1
        <if test="name!= null and name != '' ">
            name like concat CONCAT('%,', #{name}, ',%'),
        </if>
    </sql>

    <select id="getListCount" resultType="Integer" parameterType="map">
        select count(1) from (<include refid="getList"></include>) tab
    </select>

    <delete id="delete" parameterType="list">
        delete from ai_country where 1=1
        and id in
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>

</mapper>