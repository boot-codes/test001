<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aoscia.base.mapper.AreaMapper">

    <insert id="insert" parameterType="com.aoscia.base.dto.AreaDto">
            insert into ai_area (id,name,country,province,city,area,street) values (#{id},#{name},#{country},#{province},#{city},#{area},#{street});
    </insert>

    <select id="get" parameterType="java.lang.String" resultType="com.aoscia.base.dto.AreaDto">
        select id from ai_area where name=#{name}
    </select>

    <update id="update" parameterType="com.aoscia.base.dto.AreaDto">
        update ai_area
        <set>
            <if test="name!= null and name != '' ">
                name = #{name},
            </if>
            <if test="country!= null and country != '' ">
                country = #{country},
            </if>
            <if test="province!= null and province != '' ">
                province = #{province},
            </if>
        </set>
        <where>
            <if test="id !=null and id !=''">
                id=#{id}
            </if>
        </where>
    </update>

    <select id="selectById" resultType="com.aoscia.base.dto.AreaDto">
        select id from ai_area where id=#{id}
    </select>

    <select id="getList" resultType="com.aoscia.base.dto.AreaDto" parameterType="map">
        <include refid="getList"></include>
    </select>

    <sql id="getList">
        select m.*,a.* from
        ai_area a
        left join ai_country m
        on m.id=a.country
        where 1=1
        <if test="name!= null and name != '' ">
            and a.name like concat CONCAT('%,', #{name}, ',%'),
        </if>
        <if test="country!= null and country != '' ">
            and country = #{country}
        </if>
        <if test="province!= null and province != '' ">
            and province = #{province}
        </if>
        <if test="city!= null and city != '' ">
            and city = #{city}
        </if>
        <if test="area!= null and area != '' ">
            and area = #{area}
        </if>

        <if test="street!= null and street != '' ">
            and street = #{street}
        </if>
    </sql>

    <select id="getListCount" resultType="Integer" parameterType="map">
        select count(1) from (<include refid="getList"></include>) tab
    </select>

    <delete id="delete" parameterType="list">
        delete from ai_area where 1=1
        and id in
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>


    <select id="getChildren" resultType="com.aoscia.base.dto.AreaDto">
        select id,code,par_code,name from ai_area where par_code=#{parCode}
    </select>

</mapper>