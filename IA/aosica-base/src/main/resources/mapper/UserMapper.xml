<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aoscia.base.mapper.UserMapper">

    <insert id="insert" parameterType="com.aoscia.base.dto.UserDto">
            insert into ai_user (id,mobile,password,salt,name,account) values (#{id},#{mobile},#{password},#{salt},#{name},#{account});
    </insert>

    <insert id="insertJoin">
       insert into ai_user_role (id,user_id,role_id) values (#{id},#{userId},#{roleId});
    </insert>


    <delete id="deleteJoin">
       delete from ai_user_role where user_id=#{userId}
    </delete>


    <select id="get" resultType="com.aoscia.base.dto.UserDto">
        select id,mobile,password,salt from ai_user where 1=1
        <if test="type== 1">
            and name=#{name}
        </if>
        <if test="type== 2">
            and account=#{account}
        </if>
        <if test="type== 3">
            and mobile=#{mobile}
        </if>
    </select>

    <update id="update" parameterType="com.aoscia.base.dto.UserDto">
        update ai_user
        <set>
            <if test="name!= null and name != '' ">
                name = #{name},
            </if>
            <if test="password!= null and password != '' ">
                password = #{password},
            </if>
            <if test="salt!= null and salt!= '' ">
                salt = #{salt},
            </if>
        </set>
        <where>
            <if test="id !=null and id !=''">
                id=#{id}
            </if>
            <if test="mobile !=null and mobile !=''">
                mobile=#{mobile}
            </if>
        </where>
    </update>

    <select id="selectById">
        select id,name userNname,mobile,password,salt from ai_user where id=#{id}
    </select>

    <select id="getList" resultType="com.aoscia.base.dto.UserDto" parameterType="map">
        <include refid="getList"></include>
    </select>

    <sql id="getList">
        select u.id userId,u.name,u.account,u.mobile,r.id roleId,r.name from ai_user u left join ai_user_role ur
        on u.id=ur.user_id
        left join ai_role r
        on u.id=r.id
        where 1=1
        <if test="name!=null and name!=''">
            and u.name=#{name}
        </if>
        group by u.id
    </sql>

    <select id="getListCount" resultType="Integer" parameterType="map">
        select count(1) from (<include refid="getList"></include>) tab
    </select>

    <delete id="delete" parameterType="list">
        delete from ai_user where 1=1
        and id in
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>

</mapper>